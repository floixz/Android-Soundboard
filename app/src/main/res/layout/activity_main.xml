<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kevinprojects.memeboard.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Noice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/noice" />

    <Button
        android:text="Wilhelm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noice"
        android:layout_alignLeft="@+id/noice"
        android:layout_alignStart="@+id/noice"
        android:layout_marginTop="42dp"
        android:id="@+id/wilhelm" />

    <Button
        android:text="Jeopardy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wilhelm"
        android:layout_alignLeft="@+id/wilhelm"
        android:layout_alignStart="@+id/wilhelm"
        android:layout_marginTop="41dp"
        android:id="@+id/jeopardy" />

    <Button
        android:text="Jeopardy Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/j_stop"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_alignBaseline="@+id/jeopardy"
        android:layout_alignBottom="@+id/jeopardy"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
